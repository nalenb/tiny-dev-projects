---
import { Icon } from 'astro-icon'

const navigation = [
  {
    name: 'Twitter',
    href: 'https://twitter.com/nalenb',
    icon: 'mdi:twitter',
  },
  {
    name: 'GitHub',
    href: 'https://github.com/nalenb',
    icon: 'mdi:github',
  },
  {
    name: 'YouTube',
    href: 'https://www.youtube.com/channel/UCA6FLVuA3SNPM_i-3uHVwuw',
    icon: 'mdi:youtube',
  },
]
---

<footer class='bg-white'>
  <div class='mx-auto max-w-7xl py-12 px-6 md:flex md:items-center md:justify-between lg:px-8'>
    <div class='flex justify-center space-x-6 md:order-2'>
      {
        navigation.map((item) => (
          <a href={item.href} class='text-gray-400 hover:text-gray-500'>
            <span class='sr-only'>{item.name}</span>
            <Icon name={item.icon} class='h-6 w-6' aria-hidden='true' />
          </a>
        ))
      }
    </div>
    <div class='mt-8 md:order-1 md:mt-0'>
      <p class='text-center text-xs leading-5 text-gray-500'>
        &copy; 2023 Tiny Dev Projects (Bill Nalen) All rights reserved.
      </p>
    </div>
  </div>
</footer>
